{
  "nodeModulesDir": "auto",
  "tasks": {
    "check": "deno fmt --check . && deno lint . && deno check",
    "biome:check": "npx @biomejs/biome check .",
    "biome:fix": "npx @biomejs/biome check --write .",
    "verify": "deno task check && deno task test:boundaries && deno task test:rust && deno task test:unit && deno task test:layer2 && deno task test:layer3 && deno task test:layer4 && deno run --allow-read scripts/verify-snapshots.ts",
    "dev": "vite",
    "build": "vite build",
    "start": "deno serve -A _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update .",
    "build:wasm": "cd math-engine && wasm-pack build --target web --out-dir ../static/wasm",
    "desktop": "cd desktop && cargo run --release",
    "test": "deno task test:rust && deno task test:unit",
    "test:rust": "cd math-engine && cargo test",
    "test:unit": "npx vitest run --config vitest.config.ts",
    "test:e2e": "npx playwright test",
    "snapshot:physics": "deno run --allow-read --allow-write scripts/snapshot-physics.ts",
    "snapshot:ui": "deno run --allow-read --allow-write scripts/snapshot-ui.ts",
    "snapshot:state": "deno run --allow-read --allow-write scripts/snapshot-state.ts",
    "snapshot:css": "deno run --allow-read --allow-write scripts/snapshot-css-tokens.ts",
    "snapshot:lib": "deno run --allow-read --allow-write scripts/snapshot-lib-contracts.ts",
    "snapshot:islands": "deno run --allow-read --allow-write scripts/snapshot-island-contracts.ts",
    "snapshot:all": "deno task snapshot:physics && deno task snapshot:ui && deno task snapshot:state && deno task snapshot:css && deno task snapshot:lib && deno task snapshot:islands",
    "test:boundaries": "deno run --allow-read scripts/verify-boundaries.ts",
    "test:layer2": "deno run --allow-read scripts/snapshot-lib-contracts.ts --check",
    "test:layer3": "deno run --allow-read scripts/snapshot-island-contracts.ts --check",
    "test:layer4": "deno run --allow-read scripts/snapshot-css-tokens.ts --check",
    "bisect:verify": "deno run --allow-read --allow-write --allow-run scripts/bisect-verify.ts",
    "build:all": "deno task build:wasm && deno task build",
    "build:desktop": "cd desktop && cargo build --release",
    "launch:desktop": "cd desktop && cargo run --release"
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    },
    "exclude": [
      "tests/e2e/**",
      "playwright.config.ts"
    ]
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "exclude": [
    "**/_fresh/*",
    "**/target/*",
    "**/node_modules/*",
    "static/wasm/*",
    "*.timestamp-*",
    "tests/e2e/**",
    "playwright.config.ts"
  ],
  "imports": {
    "@/": "./",
    "@playwright/test": "npm:@playwright/test@^1.58.2",
    "@testing-library/jest-dom": "npm:@testing-library/jest-dom@^6.9.1",
    "@testing-library/preact": "npm:@testing-library/preact@^3.2.4",
    "@types/node": "npm:@types/node@^25.2.3",
    "fresh": "jsr:@fresh/core@^2.2.0",
    "jsdom": "npm:jsdom@^28.1.0",
    "preact": "npm:preact@^10.27.2",
    "@preact/signals": "npm:@preact/signals@^2.5.0",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.8",
    "vite": "npm:vite@^7.1.3",
    "vitest": "npm:vitest@^4.0.18",
    "webui": "jsr:@webui/deno-webui@^2.5.13",
    "@msgpack/msgpack": "npm:@msgpack/msgpack@^3.0.0",
    "zod": "npm:zod@^3.24.0",
    "@mdx-js/rollup": "npm:@mdx-js/rollup@^3.1.0",
    "@mdx-js/react": "npm:@mdx-js/react@^3.1.0",
    "remark-math": "npm:remark-math@^6.0.0",
    "rehype-katex": "npm:rehype-katex@^7.0.0",
    "katex": "npm:katex@^0.16.0"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": [
      "vite/client"
    ]
  }
}
